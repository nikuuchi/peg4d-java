// PEG4d sample for basic mathmatical operators
//

export
	= Expr

_
	= [ \t]*

File
	= Expr _

Chunk
	= Expr

Expr
	[example: 1+2*3]
	[example: (1+2)*3]
	= Sum

Sum
	= Product {@ ( '+' #Add / '-' #Sub )  @Product }*

Product
	= Value {@ ( '*' #Mul / '/' #Div / '%' #Mod ) @Value }*

Value
	= Integer
	/ '(' Expr ')'

Integer
	[description: Integer]
	= { DIGIT+ #Integer }
